title= app_title
meta charset="utf-8"
meta content="IE=Edge" http-equiv="X-UA-Compatible"
meta content="width=device-width, initial-scale=1.0" name="viewport"

= content_for :head

// To prevent the page from flickering as it scrolls from the top to the desired position, add the no-preview cache directive in the page's head:
// Useful for board page
meta name="turbolinks-cache-control" content="no-preview"

= csrf_meta_tags
= csp_meta_tag

= stylesheet_link_tag 'https://unpkg.com/ionicons@4.2.2/dist/css/ionicons.min.css', media: 'all'

= javascript_include_tag "https://code.jquery.com/jquery-3.3.1.min.js"
= javascript_include_tag "https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
= javascript_include_tag '//unpkg.com/@ungap/custom-elements'

= stylesheet_link_tag 'https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css'
= javascript_include_tag 'https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js'

-# = stylesheet_link_tag :application, 'data-turbolinks-track' => :reload, :media => "all"
-# = javascript_include_tag :application, 'data-turbolinks-track' => :reload

= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload'
/! IE Polyfill for CSS Elements
/! HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries
/[if lt IE 9]
  script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"
  script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"
/[if lte IE 8]
  // a library PolyFill for earlier IE Versions
  // https://github.com/WebReflection/ie8
  script src="https://cdnjs.cloudflare.com/ajax/libs/ie8/0.8.0/ie8.js"
